{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": false,
    "lib": ["esnext", "dom", "WebWorker"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true // dayjs
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/sw.ts",
    "**/*.worker.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
